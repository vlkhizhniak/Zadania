<form class="ms-1 row g-3" method="post" action="/customer/add">
  <div class="col-md-6">
    <label for="name" class="form-label">{{t 'name'}}*</label>
    <input type="text" class="form-control" id="name" name="name">
  </div>
  <div class="col-md-6">
    <label for="nip" class="form-label">NIP</label>
    <input type="text" class="form-control" id="nip" name="nip">
    {{#if nipError}}
    <div class="text-danger">
      {{t 'nipValid'}}
    </div>
    {{/if}}
  </div>
  <div class="col-12">
    <label for="street" class="form-label">{{t 'street'}}*</label>
    <input type="text" class="form-control" id="street" name="address.street">
  </div>
  <div class="col-12">
    <label for="country" class="form-label">{{t 'country'}}*</label>
    <input type="text" class="form-control" id="country" name="address.country">
  </div>
  <div class="col-md-6">
    <label for="city" class="form-label">{{t 'city'}}*</label>
    <input type="text" class="form-control" id="city" name="address.city">
  </div>
  <div class="col-md-4">
    <label for="region" class="form-label">{{t 'region'}}*</label>
    <input type="text" class="form-control" id="region" name="address.region">
  </div>
  <div class="col-md-2">
    <label for="zip" class="form-label">{{t 'zipCode'}}*</label>
    <input type="text" class="form-control" id="zip" name="address.zip">
    {{#if zipError}}
    <div class="text-danger">
      {{t 'zipValid'}}
    </div>
    {{/if}}
  </div>
  <div class="col-12">

    <p class="{{#if requiredError}} text-danger fw-medium {{else}} text-secondary-emphasis {{/if}}">{{t
      'fieldRequired'}}*</p>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">{{t 'submit'}}</button>
  </div>
</form>