<div class="card">
    <h5 class="card-header">{{onecustomer.name}}</h5>
    <div class="card-body">
        <h5 class="card-title">NIP: {{onecustomer.nip}}</h5>
        <h5 class="card-title">Dane adresowe</h5>
        <p class="card-text">{{t 'street'}}: {{onecustomer.address.street}}</p>
        <p class="card-text">{{t 'city'}}: {{onecustomer.address.city}}</p>
        <p class="card-text">{{t 'country'}}: {{onecustomer.address.country}}</p>
        <p class="card-text">{{t 'region'}}: {{onecustomer.address.region}}</p>
        <p class="card-text">{{t 'zipCode'}}: {{onecustomer.address.zip}}</p>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="/action/{{onecustomer._id}}" class="btn btn-success">{{t 'actionAdd'}}</a>
            <a href="/customer/edit/{{onecustomer._id}}" class="btn btn-primary">{{t 'edit'}}</a>
        </div>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">{{t 'contactDate'}}</th>
            <th scope="col">{{t 'typeAction'}}</th>
            <th scope="col">{{t 'description'}}</th>
            <th scope="col">{{t 'delete/edit'}}</th>
        </tr>
    </thead>
    <tbody>
        {{#each actionlist}}
        <tr>
            <td>{{date}}</td>
            <td>{{kind}}</td>
            <td>{{description}}</td>
            <td style="width: 15%">
                <div class="btn-group">
                    <a href="/action/delete/{{_id}}" class="btn btn-danger">Usu≈Ñ</a>
                    <a href="/action/edit/{{_id}}" class="btn btn-primary ">Edytuj</a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="/customer/{{onecustomer._id}}?page={{prevPage}}" class="btn btn-primary {{#equal nextPage 0}}disabled{{/equal}}">{{t 'prevPage'}}</a>

<a href="/customer/{{onecustomer._id}}?page={{nextPage}}" class="btn btn-primary {{#equal nextPage 0}}disabled{{/equal}}">{{t 'nextPage'}}</a>